.user-location{color:#fff}
.me-recommended{margin-top:20rpx}
.recommended-title{padding:0 40rpx;}
.userinfo-avatar{background:#fff}
.skin{position:absolute;width:50rpx;height:50rpx;right:10rpx;top:10rpx;background: rgba(6, 6, 6, 0.2);padding:10rpx;border-radius: 50%;z-index:10}
